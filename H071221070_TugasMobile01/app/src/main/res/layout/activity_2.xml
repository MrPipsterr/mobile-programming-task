<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="349dp"
        android:text="About Pyongyang"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="101dp"
        android:text="Return to the Previous Page" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="69dp"
        android:text="Pyongyang, the capital of North Korea, stands as a city of paradoxes, blending socialist realism with glimpses of modernity along its grand boulevards and lush greenery. Dominated by towering monuments like the Juche Tower and Kim Il Sung Square, the city reflects the regime's narrative, yet behind its secretive facade lies a vibrant arts scene and a rich cultural heritage. Despite its isolation, Pyongyang offers visitors a unique insight into North Korean society, inviting them to explore its enigmatic streets and experience a culture shaped by ideology and resilience."
        android:textAlignment="textStart"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="346dp"
        android:layout_height="326dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="37dp"
        android:src="@drawable/northkorea" />

</RelativeLayout>